<div class="container">
<h3>Update your Transaction</h2>
<form method="post" action="/transactions/<%= @transaction.id %>">
  <input type="hidden" name="_method" value="put">
  <div class="wrapper">




    <div class="form-one">
      <label for="date">Date:</label>
      <input type = "date" name="transaction_date" id="date"
      value="<%= @transaction.transaction_date %>">
    </div><br>

    <div class="form-one">
    <label for="store-select">Select Store: </label>
    <select id="store_id" name="store_id">
      <% @stores.each do |store| %>
        <option value="<%= store.id %>"
          <% if store.id == @transaction.store_id %>
          selected = "true"
      <% end %>>
      <%= store.name %>
        </option>
        <% end %>
    </select>
  </div><br>

  <div class="form-one">
  <label for="tag">Select Tag: </label>
  <select id="tag_id" name="tag_id">
    <% @tags.each do |tag| %>
      <option value="<%= tag.id %>"
        <% if tag.id == @transaction.tag_id %>
      selected = "true"
    <% end %>>
    <%= tag.tag_category %>
    </option>
    <% end %>
  </select>
</div><br>

    <div class="form-one">
      <label for="amount">Amount:</label>
      <input type = "number" name="amount" id="amount" step="0.05" value="<%= @transaction.amount %>">
    </div>

    <div class="form-one">
      <label for="note">Note:</label>
      <input type = "text" name="note" id="note" value="<%= @transaction.note %>">
    </div>
</div><br>




  <button class="button big-button">Update</button>
  <button class="button big-button"><a href="/transactions">Cancel</a></button>
  </div>
</form>
</div>
